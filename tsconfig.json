{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": [
      "ES2019"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./modules/*"
      ]
    }
  },
  "include": [
    "modules/**/*",
    "gas-main.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src",
    "test"
  ]
}
