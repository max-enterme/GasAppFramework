{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "lib": [
            "ES2019"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "../../modules",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "../../modules/**/*"
    ]
}
