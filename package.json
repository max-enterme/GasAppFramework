{
  "name": "gas-app-framework",
  "version": "1.0.0",
  "description": "GAS App Framework - ES Modules Edition",
  "main": "build/bundle.js",
  "types": "build/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js && node scripts/post-build.js",
    "watch": "webpack --watch --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint modules/ test/",
    "lint:fix": "eslint modules/ test/ --fix",
    "type-check": "tsc --noEmit",
    "build:modules": "npm --prefix packages/modules run build",
    "pack:modules": "npm -w packages/modules pack --pack-destination packages/modules",
    "check": "npm run lint && npm run type-check && npm test",
    "gas:push": "npm run build && node scripts/inject-version.js && clasp push",
    "gas:deploy": "node scripts/deploy.js",
    "gas:test": "node scripts/run-gas-tests.js",
    "gas:open": "clasp open",
    "gas:url:project": "node scripts/gas-url.js project",
    "gas:url:dev": "node scripts/gas-url.js dev",
    "gas:url:exec": "node scripts/gas-url.js exec",
    "gas:open:project": "node scripts/gas-url.js project open",
    "gas:open:dev": "node scripts/gas-url.js dev open",
    "gas:open:exec": "node scripts/gas-url.js exec open"
  },
  "keywords": [
    "gas",
    "google-apps-script",
    "framework",
    "di"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/google-apps-script": "^1.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "gas-webpack-plugin": "^2.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.1.4"
  }
}
